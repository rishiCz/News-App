<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/queryButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bookmark_saved"
        app:backgroundTint="#E6515457"
        android:text="News"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/delete_query"
        android:elevation="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/queryButton"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/queryButton"
        android:src="@drawable/car_ui_icon_close"
        android:scaleType="fitXY"
        app:tint="#FFFFFF"
        android:background="#00000000"/>



</androidx.constraintlayout.widget.ConstraintLayout>